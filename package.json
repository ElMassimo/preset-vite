{
	"name": "@preact/preset-vite",
	"version": "2.0.0",
	"description": "Preact preset for the vite bundler",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"types": "dist/types/index.d.ts",
	"scripts": {
		"dev": "vite demo",
		"test": "mocha -r ts-node/register --extension ts,tsx,txt src/**/*.test.ts",
		"build": "rimraf dist/ && tsc && tsc -p tsconfig.esm.json",
		"prepublishOnly": "npm run build"
	},
	"keywords": [
		"preact",
		"vite",
		"vite-preset",
		"preset"
	],
	"author": "The Preact Team (https://preactjs.com)",
	"repository": "preactjs/preset-vite",
	"license": "MIT",
	"files": [
		"dist/"
	],
	"dependencies": {
		"@babel/core": "^7.13.10",
		"@babel/plugin-syntax-jsx": "^7.12.13",
		"@prefresh/vite": "^2.1.0",
		"babel-plugin-helpers": "^0.1.1",
		"debug": "^4.3.1",
		"kolorist": "^1.2.10"
	},
	"peerDependencies": {
		"vite": "2.x"
	},
	"devDependencies": {
		"@babel/plugin-syntax-typescript": "^7.12.13",
		"@types/babel__core": "^7.1.12",
		"@types/connect": "^3.4.34",
		"@types/debug": "^4.1.5",
		"@types/mocha": "^8.2.1",
		"@types/node": "^14.14.33",
		"lint-staged": "^10.5.4",
		"mocha": "^8.3.2",
		"prettier": "^2.2.1",
		"rimraf": "^3.0.2",
		"simple-git-hooks": "^2.0.2",
		"ts-node": "^9.1.1",
		"typescript": "^4.2.3",
		"vite": "^2.0.5"
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx,yml}": [
			"prettier --write"
		]
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"prettier": {
		"useTabs": true,
		"arrowParens": "avoid",
		"trailingComma": "all"
	}
}
